{
  "name": "tonic.js",
  "description": "Music theory and instrument models.",
  "version": "0.1.0",
  "author": "Oliver Steele <steele@osteele.com>",
  "license": "MIT",
  "keywords": [
    "music",
    "music-theory",
    "chord-diagrams"
  ],
  "repository": "github:osteele/tonic.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "LICENSE"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.116",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.2",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "check": "tsc --noEmit",
    "clean": "rimraf dist",
    "doc": "typedoc --out docs/api --mode file --excludePrivate --excludeProtected --excludeExternals --exclude \"**/graphics/*.ts\" src",
    "format": "yarn lint --fix",
    "lint": "tslint --project .",
    "lint:strict": "tslint --project . -c tslint-strict.yaml",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn check && yarn test --bail",
      "pre-push": "yarn check && yarn test"
    }
  }
}
